{
  "name": "gcp-controller-bot",
  "module": "./src/index.ts",
  "description": "Discord Bot to remotely control Google Cloud. ",
  "type": "module",
  "packageManager": "bun@1.0.29",
  "private": true,
  "author": {
    "name": "m1sk9",
    "email": "me@m1sk9.dev",
    "url": "https://m1sk9.dev"
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "start": "bun run build/index.js",
    "build": "bun build --entrypoints ./src/index.ts --outdir ./build --target bun --minify",
    "format": "bunx @biomejs/biome format --write ./src",
    "lint": "bunx @biomejs/biome lint ./src",
    "check": "bunx @biomejs/biome check --apply ./src",
    "check:type": "tsc --noEmit",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@google-cloud/compute": "^4.2.0",
    "@mikuroxina/mini-fn": "^5.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@types/bun": "^1.0.7",
    "lefthook": "^1.6.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
